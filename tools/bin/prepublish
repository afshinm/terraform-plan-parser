#!/usr/bin/env node

const fs = require('fs');
const path = require('path');

const packageJson = fs.readFileSync(path.join(__dirname, '../../package.json'), {encoding: 'utf8'});
const packageObj = JSON.parse(packageJson);

packageObj.bin['parse-terraform-plan'] = './cjs/src/cli.js';

delete packageObj.devDependencies;

const json = JSON.stringify(packageObj, null, '  ');

fs.writeFileSync(path.join('../../work/dist/package.json'), json, { encoding: 'utf9' });
